---
import Mail from '../components/icons/Mail.astro';
import Phone from '../components/icons/Phone.astro';
import Instagram from '../components/icons/Instagram.astro';
import Twitter from '../components/icons/Twitter.astro';
import Linkedin from '../components/icons/Linkedin.astro';
import Github from '../components/icons/Github.astro';
import Tiktok from './icons/Tiktok.astro';

const anioActual = new Date().getFullYear();
---

<footer class="py-12 border-t border-zinc-800">
  <div class="container">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-8 mb-12">
      <div>
        <a class="text-2xl font-medium">Zenith Studio</a>
        <p class="mt-4 text-gray-400">
          Transformamos ideas en realidades digitales con diseño y desarrollo web de calidad.
        </p>
      </div>

      <div>
        <h4 class="text-lg font-medium mb-4">Enlaces rápidos</h4>
        <ul class="space-y-2">
          <li><a href="#servicios" class="text-gray-400 hover:text-white transition-colors">Servicios</a></li>
          <li><a href="#tecnologias" class="text-gray-400 hover:text-white transition-colors">Tecnologías</a></li>
          <li><a href="#faq" class="text-gray-400 hover:text-white transition-colors">FAQ</a></li>
          <li><a href="#contacto" class="text-gray-400 hover:text-white transition-colors">Contacto</a></li>
          
        </ul>
      </div>

      <div>
        <h4 class="text-lg font-medium mb-4">Servicios</h4>
        <ul class="space-y-2">
          <li><a  class="text-gray-400 hover:text-white transition-colors">Diseño Web</a></li>
          <li><a  class="text-gray-400 hover:text-white transition-colors">Desarrollo Web</a></li>
          <li><a  class="text-gray-400 hover:text-white transition-colors">E-Commerce</a></li>
          <!-- <li><a href="#" class="text-gray-400 hover:text-white transition-colors">Marketing Digital</a></li> -->
        </ul>
      </div>

      <div>
        <h4 class="text-lg font-medium mb-4">Contacto</h4>
        <ul class="space-y-2">
          <li class="flex items-center gap-2 text-gray-400">
            <Mail class="w-4 h-4" />
            <a href="mailto:contacto@ardian.com" class="hover:text-white transition-colors">equipo@zenithstudio.site</a>
          </li>
          <li class="flex items-center gap-2 text-gray-400">
            <Phone class="w-4 h-4" />
            <a href="tel:+5411123456789" class="hover:text-white transition-colors">+54 388 4326541</a>
          </li>
        </ul>
      </div>
    </div>

    <div class="border-t border-zinc-800 pt-8 flex flex-col md:flex-row justify-between items-center">
      <p class="text-gray-400 text-sm">
        © {anioActual} ZenithStudio. Todos los derechos reservados.
      </p>
      <div class="flex gap-4 mt-4 md:mt-0">
        <a href="https://www.instagram.com/zenithstudio.ok/" class="text-gray-400 hover:text-white transition-colors">
          <Instagram class="w-5 h-5" />
        </a>
        <a href="#" class="text-gray-400 hover:text-white transition-colors">
          <Tiktok class="w-5 h-5" />
        </a>
        <!-- <a href="#" class="text-gray-400 hover:text-white transition-colors">
          <Linkedin class="w-5 h-5" />
        </a>
        <a href="#" class="text-gray-400 hover:text-white transition-colors">
          <Github class="w-5 h-5" />
        </a> -->
      </div>
    </div>
  </div>
</footer>
