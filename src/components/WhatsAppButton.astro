<style>
  .whatsapp-button {
    filter: drop-shadow(0 0 0.75rem rgba(37, 211, 102, 0.5));
  }
  
  /* Animación de pulso personalizada */
  @keyframes ping {
    0% {
      transform: scale(0.95);
      opacity: 0.8;
    }
    70% {
      transform: scale(1.1);
      opacity: 0;
    }
    100% {
      transform: scale(1.1);
      opacity: 0;
