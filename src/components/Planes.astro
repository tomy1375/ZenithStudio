            </div>
            <ul class="space-y-4 mb-8 flex-grow relative">
              {plan.caracteristicas.map((caracteristica) => (
                <li class={`flex items-start gap-3 ${plan.textColor} ${plan.destacado ? 'opacity-90' : 'text-gray-600 dark:text-gray-400'}`}>
