    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 lg:gap-8 relative z-10">
      {planes.map((plan, index) => (
        <div class={`relative rounded-2xl overflow-hidden border ${plan.borderColor} ${plan.destacado ? 'z-10' : ''} transition-all duration-300 hover:shadow-xl hover:-translate-y-1 group plan-card`} data-index={index}>
          <div class={`p-8 ${plan.color} h-full flex flex-col`}>
            {plan.destacado && (
              <div class="absolute top-4 right-4 bg-white dark:bg-purple-900 text-purple-600 dark:text-white text-xs font-bold px-3 py-1 rounded-full shadow-lg popular-badge">
                Popular
